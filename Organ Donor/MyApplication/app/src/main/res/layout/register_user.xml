<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:id="@+id/etNameRegister"
            android:hint="Name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginTop="37dp"
            android:id="@+id/etPasswordRegister"
            android:layout_below="@+id/etNameRegister"
            android:layout_alignLeft="@+id/etNameRegister"
            android:layout_alignStart="@+id/etNameRegister"
            android:hint="Password" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordRegister"
            android:layout_marginTop="61dp"
            android:id="@+id/imgbSignUpRegister"
            android:layout_alignLeft="@+id/etPasswordRegister"
            android:layout_alignStart="@+id/etPasswordRegister"
            android:layout_alignRight="@+id/etPasswordRegister"
            android:layout_alignEnd="@+id/etPasswordRegister"
            android:src="@drawable/signupp" />

    </RelativeLayout>
</LinearLayout>
