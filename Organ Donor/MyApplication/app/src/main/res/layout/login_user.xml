<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:id="@+id/etNameLogin"
            android:hint="Name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_below="@+id/etNameLogin"
            android:layout_alignLeft="@+id/etNameLogin"
            android:layout_alignStart="@+id/etNameLogin"
            android:layout_marginTop="39dp"
            android:id="@+id/etPasswordLogin"
            android:hint="Password" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordLogin"
            android:layout_marginTop="54dp"
            android:id="@+id/imgbSignInLogin"
            android:layout_alignLeft="@+id/etPasswordLogin"
            android:layout_alignStart="@+id/etPasswordLogin"
            android:layout_alignRight="@+id/etPasswordLogin"
            android:layout_alignEnd="@+id/etPasswordLogin"
            android:src="@drawable/signinn" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/imgbSignUpLogin"
            android:layout_below="@+id/imgbSignInLogin"
            android:layout_alignLeft="@+id/imgbSignInLogin"
            android:layout_alignStart="@+id/imgbSignInLogin"
            android:layout_alignRight="@+id/imgbSignInLogin"
            android:layout_alignEnd="@+id/imgbSignInLogin"
            android:src="@drawable/signupp" />

    </RelativeLayout>

</LinearLayout>
